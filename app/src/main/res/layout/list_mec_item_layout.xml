<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:background="@color/novaOffWhite"
    android:layout_marginTop="@dimen/small_padding">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_text_box"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@id/tag_text_box"
        android:padding="@dimen/extra_small_padding"
        android:textSize="@dimen/medium_text_size"
        android:textColor="@color/novaDark"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tag_text_box"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/medium_text_size"
        android:textColor="@color/novaSubDark"
        android:padding="@dimen/extra_small_padding"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_text_box"
        android:id="@+id/details_text_box"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/extra_small_padding"
        android:textSize="@dimen/small_text_size"
        android:textColor="@color/novaSubDark"
        android:gravity="center_vertical"/>

</RelativeLayout>