<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.magendanz.villanovamec.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/large_item_size"
        android:id="@+id/headerBar"
        android:background="@color/novaDark"
        android:orientation="horizontal"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="@dimen/medium_item_size"
            android:layout_height="match_parent"
            android:src="@drawable/villanova_mec_logo"
            android:layout_margin="@dimen/small_padding"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/app_name"
            android:gravity="center_vertical"
            android:textSize="@dimen/large_text_size"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/medium_item_size"
        android:id="@+id/tabbedBar"
        android:background="@color/novaDark"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/schedule_button"
            android:layout_weight="1"
            android:src="@drawable/calendar_icon"
            android:padding="@dimen/medium_padding"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:onClick="switchToSchedule"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/news_button"
            android:layout_weight="1"
            android:src="@drawable/news_icon"
            android:padding="@dimen/medium_padding"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:onClick="switchToNews"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/map_button"
            android:layout_weight="1"
            android:src="@drawable/map_icon"
            android:padding="@dimen/medium_padding"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:onClick="switchToMap"/>

    </LinearLayout>

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_container"
        android:layout_below="@id/headerBar"
        android:layout_above="@id/tabbedBar"
        android:name="com.magendanz.villanovamec.MapFragment"
        tools:layout="@layout/fragment_map" />

</RelativeLayout>
